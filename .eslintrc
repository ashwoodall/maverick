{
  "parser": "babel-eslint",
	"extends": [
		"standard",
    "standard-react"
	],
	"plugins": [
		"babel",
		"react"
	],
	"env": {
		"browser": true,
    "mocha" : true,
    "es6": true
	},
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false
  },
  "rules": {
    "react/jsx-curly-spacing": [2, "always", {"spacing": {
      "objectLiterals": "never"
    }}],
    "react/jsx-no-bind": [2, {
      "allowArrowFunctions": true
    }],
    "object-curly-spacing": [2, "always"]
  }
}
