{
  "name": "OhHi",
  "repository": "https://github.com/oh-hi/maverick",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "better-npm-run compile",
    "build:dev": "better-npm-run dev",
    "deploy": "better-npm-run deploy",
    "test": "better-npm-run test",
    "lint": "better-npm-run lint",
    "lint:js": "better-npm-run js",
    "lint:sass": "better-npm-run sass"
  },
  "betterScripts": {
    "compile": {
      "command": "babel-node -- ./node_modules/.bin/webpack -p --config ./config/webpack/webpack.prod.config.js --progress --colors"
    },
    "dev": {
      "command": "nodemon --exec babel-node --harmony bin/server.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "deploy": {
      "command": "npm run lint && npm run clean && npm run compile",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "babel-node ./node_modules/karma/bin/karma start ./karma.config",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "lint": {
      "command": "npm run lint:js && npm run lint:sass"
    },
    "js": {
      "command": "eslint src || true"
    },
    "sass": {
      "command": "sass-lint -c .sass-lint.yml 'src/**/*.scss' -v -i"
    }
  },
  "author": "Brandon Clark",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.1",
    "chalk": "^1.1.3",
    "cheerio": "^0.20.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.4.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-promise": "^3.3.2",
    "eslint-plugin-react": "^6.2.0",
    "eslint-plugin-standard": "^2.0.1",
    "karma": "^1.2.0",
    "karma-mocha": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.0.2",
    "nodemon": "^1.11.0",
    "phantomjs-prebuilt": "^2.1.12",
    "react-addons-test-utils": "^15.3.1",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.3.3",
    "rimraf": "^2.5.4",
